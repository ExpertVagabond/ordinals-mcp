{
  "serverInfo": {
    "name": "ordinals-mcp",
    "version": "0.1.2"
  },
  "tools": [
    {
      "name": "get_inscription",
      "description": "Get detailed metadata for a Bitcoin Ordinals inscription by its ID or number. Returns owner address, content type, sat rarity, genesis info, and more.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Inscription ID ({txid}i{index}) or inscription number"
          }
        },
        "required": ["id"],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    },
    {
      "name": "search_inscriptions",
      "description": "Search and list Bitcoin Ordinals inscriptions with filters. Filter by address, MIME type, sat rarity, block range, inscription number range, recursive/cursed status.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "description": "Filter by owner Bitcoin address"
          },
          "mime_type": {
            "type": "string",
            "description": "Filter by MIME type (e.g., image/png, text/plain)"
          },
          "rarity": {
            "type": "string",
            "enum": ["common", "uncommon", "rare", "epic", "legendary", "mythic"],
            "description": "Filter by sat rarity"
          },
          "from_block": {
            "type": "number",
            "description": "Start block height"
          },
          "to_block": {
            "type": "number",
            "description": "End block height"
          },
          "from_number": {
            "type": "number",
            "description": "Start inscription number"
          },
          "to_number": {
            "type": "number",
            "description": "End inscription number"
          },
          "recursive": {
            "type": "boolean",
            "description": "Filter recursive inscriptions"
          },
          "cursed": {
            "type": "boolean",
            "description": "Filter cursed inscriptions"
          },
          "offset": {
            "type": "number",
            "default": 0,
            "description": "Pagination offset"
          },
          "limit": {
            "type": "number",
            "default": 20,
            "description": "Results per page (max 60)"
          }
        },
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    },
    {
      "name": "get_inscription_content",
